<% include ../partials/header %>


<h1 style="text-align: center; margin: 30px 0;">Edit Comment</h1>

<form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST" style="width: 30%; margin: 0 auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
</form>
<div style="width: 30%; margin: 0 auto;">
    <a href="/campgrounds/<%= campground_id %>">Go Back</a>
</div>



