<% include ../partials/header %>

<h1 style="text-align: center; margin: 30px 0;">Add New Comment to <%= campground.name %></h1>

<form action="/campgrounds/<%= campground._id %>/comments" method="POST" style="width: 30%; margin: 0 auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Comment text">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
</form>
<div style="width: 30%; margin: 0 auto;">
    <a href="/campgrounds">Go Back</a>
</div>


<% include ../partials/footer %>